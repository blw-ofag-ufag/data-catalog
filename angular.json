{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "DigiAgriFoodDB": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "standalone": true
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "standalone": true,
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "standalone": true,
          "skipTests": true
        },
      },
      "root": "",
      "sourceRoot": "src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/DigiAgriFoodCH",
            "index": "src/index.html",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/@oblique/oblique/assets",
                "output": "assets"
              },
              {
                "glob": "*/**",
                "input": "node_modules/@oblique/oblique/styles/fonts",
                "output": "assets/fonts"
              },
              "src/assets"
            ],
            "styles": [
              "node_modules/@oblique/oblique/styles/css/oblique-core.css",
              "src/styles/styles.scss"
            ],
            "scripts": [
              "node_modules/@oblique/oblique/ob-features.js"
            ],
            "allowedCommonJsDependencies": [
              "ajv",
              "ajv-formats"
            ],
            "main": "src/main.ts"
          },
          "configurations": {
            "development": {
              "buildOptimizer": false,
              "vendorChunk": true
            },
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1.7mb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "3kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "prod": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1.7mb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "3kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "DigiAgriFoodDB:build:production"
            },
            "development": {
              "buildTarget": "DigiAgriFoodDB:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "tests/jest.config.js",
            "tsConfig": "tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": ""
    }
  }
}
